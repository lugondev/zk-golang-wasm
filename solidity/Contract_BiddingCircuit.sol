        vk.IC[3] = Pairing.G1Point(uint256(15807498849160809040383405498047160978490761765197482583020923053057932223643), uint256(12018836092189447590548458790472114251397625346236741466826792225744991607052));   
        vk.IC[4] = Pairing.G1Point(uint256(169976406580498960847812559698553940221145921758637444201934566008829590794), uint256(16453387293097883300383775493611724601322419918412950919803424124209860474915));   
